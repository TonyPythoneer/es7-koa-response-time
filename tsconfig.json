{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "ES5",
        "lib": [
            "es5",
            "dom",
            "es2015"
        ],
        "suppressImplicitAnyIndexErrors": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "removeComments": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "pretty": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "exclude": [
        "node_modules"
    ]
}